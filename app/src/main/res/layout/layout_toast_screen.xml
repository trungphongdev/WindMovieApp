<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toastContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_toast">

    <TextView
        android:id="@+id/tvToastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp12"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp30"
        android:paddingVertical="@dimen/dp5"
        tools:text="@string/passwordLabel"
        android:textColor="@color/black"
        android:textSize="@dimen/sp12"
        app:drawableLeftCompat="@drawable/ic_done_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>